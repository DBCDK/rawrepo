name=rawrepo

# Parameters must be used in solrconfig.xml file:
{{if exists "/dbc/autocommit/maxtime"}}
    dbc.autoCommit.maxTime={{getv "/dbc/autocommit/maxtime"}}
{{end}}

{{if exists "/dbc/autocommit/maxdocs"}}
    dbc.autoCommit.maxDocs={{getv "/dbc/autocommit/maxdocs"}}
{{end}}

{{if exists "/dbc/autocommit/opensearcher"}}
    dbc.autoCommit.openSearcher={{getv "/dbc/autocommit/opensearcher"}}
{{end}}

{{if exists "/solr/autosoftcommit/maxtime"}}
    solr.autoSoftCommit.maxTime={{getv "/solr/autosoftcommit/maxtime"}}
{{end}}

{{if exists "/dbc/autosoftcommit/maxdocs"}}
    dbc.autoSoftSoftCommit.maxDocs={{getv "/dbc/autosoftcommit/maxdocs"}}
{{end}}
