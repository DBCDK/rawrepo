<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <data-source>
        <name>java:global/jdbc/rawrepointrospect/basistest-rawrepo</name>
        <class-name>org.postgresql.ds.PGSimpleDataSource</class-name>
        <url>jdbc:postgresql://${ENV=DB_HOST}:${ENV=DB_PORT}/${ENV=DB_NAME}</url>
        <user>${ENV=DB_USER}</user>
        <password>${ENV=DB_PASSWORD}</password>
        <!-- taken from https://github.com/payara/Payara-Examples/blob/master/Payara-Micro/datasource-example/src/main/webapp/WEB-INF/web.xml -->
        <property>
            <name>is-connection-validation-required</name>
            <value>true</value>
        </property>
        <!--<property>
            <name>fail-all-connections</name>
            <value>true</value>
        </property>-->
        <property>
            <name>connection-validation-method</name>
            <value>custom-validation</value>
        </property>
        <property>
            <name>validation-classname></name>
            <value>org.glassfish.api.jdbc.validation.PostgresConnectionValidation</value>
        </property>
    </data-source>
</web-app>
